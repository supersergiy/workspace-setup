
sudo chmod +x apt-packages.sh docker-install.sh misc.sh vim.sh 

sudo ./apt-packages.sh
sudo ./vim.sh
sudo ./tmux.sh
./misc.sh


if [ $# -eq 1 ]
then
    if [ $1 = '--docker' ]
    then
        sudo ./docker-install.sh
    fi

    if [ $1 = '--reboot' ]
    then
        sudo reboot
    fi
fi

if [ $# -eq 2 ]
then
    if ([ $1 = '--reboot' ] && [ $2 = '--docker' ]) || ([ $2 = '--reboot' ] && [ $1 = '--docker' ])
    then
        sudo ./docker-install.sh
        sudo reboot
    fi
fi
    

